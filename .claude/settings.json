{
  "permissions": {
    "defaultMode": "acceptEdits",
    "additionalDirectories": [".claude"],
    "allow": [
      "Bash",
      "WebFetch",
      "Write",
      "Edit",
      "MultiEdit",
      "Read",
      "Glob",
      "Grep",
      "LS",
      "Task",
      "ExitPlanMode",
      "NotebookEdit",
      "TodoWrite",
      "BashOutput",
      "KillBash"
    ]
  },
"env": {
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "AWS_DEFAULT_REGION": "us-east-1",
    "AWS_REGION": "us-east-1",
    "ANTHROPIC_MODEL": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
    "ANTHROPIC_SMALL_FAST_MODEL": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8192",
    "DISABLE_PROMPT_CACHING": "0",
    "ANTHROPIC_MAX_RETRIES": "5",
    "MAX_THINKING_TOKENS": "20000"
  },
  "awsCredentialExport": ".claude/refresh-aws-creds.sh",
  "enableAllProjectMcpServers": true
}
